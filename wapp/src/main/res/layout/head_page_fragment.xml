<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_tablayout_text"
    tools:context=".HeadPage">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light">

        <Button
            android:id="@+id/button"
            android:layout_width="305dp"
            android:layout_height="61dp"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="277dp"
            android:background="@drawable/shape_blue"
            android:paddingLeft="26dp"
            android:paddingRight="35.5dp"
            android:drawableLeft="@mipmap/historyimage"
            android:drawableRight="@mipmap/angle"
            android:text="历史记录"
            android:textColor="#3582CA"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="305dp"
            android:layout_height="61dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="179dp"
            android:drawableLeft="@mipmap/message_icon"
            android:drawableRight="@mipmap/message_arrow_icon"
            android:paddingLeft="26dp"
            android:paddingRight="35.5dp"
            android:text="实时信息"
            android:textColor="#189DCE"
            android:textSize="20sp"
            android:background="@drawable/shape_blue2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/button4"
            android:layout_width="305dp"
            android:layout_height="61dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="83dp"
            android:background="@drawable/shape_blue3"
            android:drawableLeft="@mipmap/icon_see"
            android:drawableRight="@mipmap/icon_third"
            android:paddingLeft="26dp"
            android:paddingRight="35.5dp"
            android:text="远程观察"
            android:textColor="#189DCE"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="32dp"
            android:background="#3193C5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>